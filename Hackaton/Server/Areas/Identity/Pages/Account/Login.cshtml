@page "/account/login"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="auth-form-light text-left p-5">
    <div class="brand-logo">
        <a href="/">
            <img src="/img/logo.svg">
        </a>
    </div>
    <h4>Администрация</h4>
    <h6 class="font-weight-light">Влез, за да продължиш</h6>
    <form asp-route-returnUrl="@Model.ReturnUrl" id="account" method="post" class="pt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Input.UserName" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Потребителско име" />
        </div>
        <div class="form-group">
            <input asp-for="Input.Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Парола" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-info btn-fw">Вход</button>
        </div>
        <div class="my-2 d-flex justify-content-between align-items-center">
            <div class="form-check">
                <label class="form-check-label text-muted">
                    <input asp-for="Input.RememberMe" class="form-check-input"> Запомни ме <i class="input-helper"></i>
                </label>
            </div>
        </div>
        <div class="text-center mt-4 font-weight-light">
            Нямаш акаунт?  <a asp-area="Identity" asp-page="/Account/Register" class="text-primary">Направи си!</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
