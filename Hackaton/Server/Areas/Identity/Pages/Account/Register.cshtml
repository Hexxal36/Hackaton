@page "/account/register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-form-light text-left p-5">
    <div class="brand-logo">
        <a href="/">
            <img src="/img/logo.svg">
        </a>
    </div>
    <h4>Нов си?</h4>
    <h6 class="font-weight-light">Кандидатствай за админ!</h6>
    <form asp-route-returnUrl="@Model.ReturnUrl" class="pt-3" method="post">
        <div class="form-group">
            <input asp-for="Input.UserName" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Потребителско име" />
            <span asp-validation-for="Input.UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Имейл" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Парола" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" placeholder="Потвърди паролата" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Регистриране</button>
        </div>
    </form>
    <div class="text-center mt-4 font-weight-light">
        Вече имаш акаунт? <a asp-area="Identity" asp-page="/Account/Login" class="text-primary">Влез</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
